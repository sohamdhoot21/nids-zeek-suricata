{
  "index_patterns": ["nids-*"],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0
  },
  "mappings": {
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "timestamp": {
        "type": "date"
      },
      "flow_id": {
        "type": "keyword"
      },
      "src_ip": {
        "type": "ip"
      },
      "dest_ip": {
        "type": "ip"
      },
      "src_port": {
        "type": "integer"
      },
      "dest_port": {
        "type": "integer"
      },
      "proto": {
        "type": "keyword"
      },
      "event_type": {
        "type": "keyword"
      },
      "alert": {
        "properties": {
          "signature": {
            "type": "text"
          },
          "category": {
            "type": "keyword"
          }
        }
      }
    }
  }
} 